{
  "functions": {
    "api/*.py": {
      "runtime": "vercel-python@0.6.0"
    }
  },
  "rewrites": [
    {
      "source": "/api/opportunities",
      "destination": "/api/opportunities.py"
    },
    {
      "source": "/api/stats",
      "destination": "/api/stats.py"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}